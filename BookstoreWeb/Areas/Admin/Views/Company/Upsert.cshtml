@model Company

<div class="d-flex align-items-center justify-content-center">
	<form method="post" style="width:1300px" enctype="multipart/form-data">
		<input asp-for="Id" hidden />
		<div class="row">
			<div class="col-10">
				<div class="border p-3 mt-4">
					<div class="row pb-2">
						<h2 class="text-center">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
						<hr />
					</div>

					<div class="mb-3 row p-1">
						<label asp-for="Name" class="p-0"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger disabled"></span>
					</div>

					<div class="mb-3 row p-1">
						<label asp-for="StreetAddress" class="p-0"></label>
						<input asp-for="StreetAddress" class="form-control" />
						<span asp-validation-for="StreetAddress" class="text-danger disabled"></span>
					</div>

					<div class="mb-3 row p-1">
						<label asp-for="City" class="p-0"></label>
						<input asp-for="City" class="form-control" />
						<span asp-validation-for="City" class="text-danger disabled"></span>
					</div>

					<div class="mb-3 row p-1">
						<label asp-for="State" class="p-0"></label>
						<input asp-for="State" class="form-control" />
						<span asp-validation-for="State" class="text-danger disabled"></span>
					</div>

					<div class="mb-3 row p-1">
						<label asp-for="PostalCode" class="p-0"></label>
						<input asp-for="PostalCode" class="form-control" />
						<span asp-validation-for="PostalCode" class="text-danger disabled"></span>
					</div>

					<div class="mb-3 row p-1">
						<label asp-for="PhoneNumber" class="p-0"></label>
						<input asp-for="PhoneNumber" class="form-control" />
						<span asp-validation-for="PhoneNumber" class="text-danger disabled"></span>
					</div>

					<div class="d-flex align-items-center justify-content-center">
						@if (Model.Id != 0)
						{
							<button type="submit" class="btn btn-success" style="width:80px; margin-right:15px;">Update</button>

						}
						else
						{
							<button type="submit" class="btn btn-success" style="width:80px; margin-right:15px;">Create</button>
						}
						<a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:80px;">Back</a>
					</div>
				</div>
			</div>
		</div>

	</form>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

