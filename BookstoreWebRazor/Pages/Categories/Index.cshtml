@page
@model BookstoreWebRazor.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pb-3 ">
		<div class="col-6">
			<h2>Category List</h2>
		</div>

		<div class="col-6 text-end">
			<a asp-page="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"> </i>
				Add new
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped text-center">
		<thead>
			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
				<th style="width:250px"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var category in Model.Categories.OrderBy(u => u.DisplayOrder))
			{
				<tr>
					<td>@category.Name</td>
					<td>@category.DisplayOrder</td>
					<td>
						<div>
							<a asp-page="/Categories/Edit" asp-route-id="@category.Id" class="btn btn-success mx-2" style="width:90px">
								<i class="bi bi-pencil"></i> Edit
							</a>

							<a asp-page="/Categories/Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2" style="width:90px">
								<i class="bi bi-trash3"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

