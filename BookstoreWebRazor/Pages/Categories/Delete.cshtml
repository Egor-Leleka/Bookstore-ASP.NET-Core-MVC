@page
@model BookstoreWebRazor.Pages.Categories.DeleteModel

<div class="d-flex align-items-center justify-content-center">
	<form method="post" style="width:500px">
		<input asp-for="Category.Id" hidden />
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-center">Delete Category</h2>
				<hr />
			</div>
			<div class="mb-3 row p-1">
				<label asp-for="Category.Name" class="p-0"></label>
				<input asp-for="Category.Name" disabled class="form-control" />
			</div>
			<div class="mb-3 row p-1">
				<label asp-for="Category.DisplayOrder" class="p-0"></label>
				<input asp-for="Category.DisplayOrder" disabled class="form-control" />

			</div>
			<div class="d-flex align-items-center justify-content-center">
				<button type="submit" class="btn btn-danger" style="width:80px; margin-right:15px;">Delete</button>
				<a asp-page="/Categories/Index" class="btn btn-secondary" style="width:80px;">Back</a>
			</div>
		</div>
	</form>
</div>
